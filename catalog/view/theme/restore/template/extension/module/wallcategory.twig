<h3 class="section-title">{{ heading_title }}</h3>
  <div class="row">
    {% for category in categories %}
    <div class="col-md-4 col-sm-6">
      <div class="category-wall-box">
        <a href="{{ category.href }}" class="image">
          <img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}" />
        </a>
        <div class="category-list">
          <a class="title" href="{{ category.href }}">{{ category.name }}</a>
          {% if category.children %}
          <ul>
            {% for child in category.children %}
            <li><a href="{{ child.href }}">{{ child.name }}</a></li>
            {% endfor %}
          </ul>
          {% endif %}
          <a class="show-more" href="{{ category.href }}">{{ show_more }}</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

