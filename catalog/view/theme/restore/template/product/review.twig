{% if reviews %}
<div class="review-list">
    {% for review in reviews %}
    <div class="review-box">
        <div class="row">
            <div class="col-sm-3">
                <div class="autor">{{ review.author }}</div>
                <div class="rating">
                    {% for i in 1..5 %}
                        {% if review.rating < i %}
                            <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                        {% else %}
                            <span class="fa fa-stack"><i class="fa fa-star stary fa-stack-2x"></i><i class="fa fa-star fa-stack-2x"></i></span>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="col-sm-9">
                <div class="text">
                    <div class="date">{{ review.date_added }}</div>
                    {{ review.text }}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    {{ pagination }}
</div>
{% else %}
    <div class="no-review">{{ text_no_reviews }}</div>
{% endif %}