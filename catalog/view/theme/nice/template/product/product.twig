                          <li><span class="meta-label">{{ text_stock }}</span> <span class="meta-value">{{ stock }}</span></li>
                          {% if reward %}
                            <li><span class="meta-label">{{ text_reward }}</span> <span class="meta-value">{{ reward }}</span></li>
                            {% endif %}

