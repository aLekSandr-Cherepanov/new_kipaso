                {% else %} <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a> {% endif %}
              {% endfor %} </p>
          </div>
        </div>
        {% endif %}
      </div>     

      {{ block_products_related }}

      {{ content_bottom }}
    </div>
  </div>
    
